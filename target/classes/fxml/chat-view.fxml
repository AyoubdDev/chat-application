<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>   <!-- âš¡ Import obligatoire -->

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.chatapp.ChatController"
      alignment="CENTER">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TextArea fx:id="chatArea" editable="false" prefHeight="200" prefWidth="350"/>
    <HBox spacing="10">
        <TextField fx:id="messageField" promptText="Votre message..." HBox.hgrow="ALWAYS"/>
        <Button text="Envoyer" onAction="#sendMessage"/>
    </HBox>
</VBox>
